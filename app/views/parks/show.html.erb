<h1>Park</h1>

<p>
  <strong>Name:</strong>
  <%= @park.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @park.description %>
</p>

<p>
  <strong>Rangers working:</strong></br>
  <% Park.find(@park).rangers.each do | ranger | %>
    <%= ranger.name %></br>
  <% end %>
</p>

<p>
  <%= image_tag @park.picture %>
</p>

<%= link_to 'Edit', edit_park_path(@park) %> |
<%= link_to 'Destroy', @park, method: :delete, data: { confirm: 'Are you sure?' } %>
