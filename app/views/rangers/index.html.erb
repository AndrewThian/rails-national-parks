<h1>Rangers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rangers.each do |ranger| %>
      <tr>
        <td><%= ranger.name %></td>
        <td><%= ranger.parks.count %></td>
        <td><%= link_to 'Show', ranger %></td>
        <td><%= link_to 'Edit', edit_ranger_path(ranger) %></td>
        <td><%= link_to 'Destroy', ranger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Park', new_ranger_path, class: 'btn btn-default' %>
